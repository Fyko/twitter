{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "error",
		"lib": [
			"esnext"
		],
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "ES2020"
	},
	"exclude": [
		"node_modules",
		"tests"
	],
	"include": [
		"src",
	]
}
